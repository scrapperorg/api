{
  "name": "anap-screening-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "rm -rf ./dist && tsc",
    "start": "node dist/server",
    "dev": "docker-compose --env-file .env up -d postgres && nodemon",
    "dev:container": "docker-compose --env-file .env up -d && docker-compose logs -f screening-server",
    "test": "jest --env=node --colors",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write './src/**/*.ts' --config ./.prettierrc",
    "decrypt": "sops --decrypt .enc.env > .env",
    "migration:create": "npx mikro-orm migration:create",
    "migration:up": "npx mikro-orm migration:up",
    "migration:down": "npx mikro-orm migration:down",
    "migration:list": "npx mikro-orm migration:list",
    "migration:pending": "npx mikro-orm migration:pending",
    "migration:fresh": "npx mikro-orm migration:fresh",
    "seed": "npx mikro-orm seeder:run",
    "container:build:prod": "docker build --target production -t anap-screening/server:prod .",
    "container:start:prod": "docker run --env-file ./env --expose 3000:3000 anap-screening/server:prod",
    "container:prod": "yarn container:build:prod && yarn container:start:prod"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.6.0",
    "@mikro-orm/cli": "^5.4.2",
    "@mikro-orm/core": "^5.4.2",
    "@mikro-orm/migrations": "^5.4.2",
    "@mikro-orm/postgresql": "^5.4.2",
    "@mikro-orm/seeder": "5.4.2",
    "@types/file-type": "^10.9.1",
    "@types/uuid": "^8.3.4",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "file-type": "16.5.3",
    "inversify": "^6.0.1",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "multer": "^1.4.5-lts.1",
    "pg-boss": "^9.0.1",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "mikro-orm": {
    "useTsNode": true
  },
  "_moduleAliases": {
    "@controllers": "dist/app/controllers",
    "@services": "dist/app/services",
    "@mappers": "dist/app/mappers",
    "@middlewares": "dist/app/middlewares",
    "@domain": "dist/domain/",
    "@repos": "dist/domain/repos",
    "@server": "dist/server",
    "@lib": "dist/lib",
    "@persistence": "dist/persistence"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "docker-compose": "^0.23.17",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "jest-cli": "^29.2.2",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1"
  }
}
